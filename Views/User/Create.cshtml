@model terceraPractica.Models.CreateUser

@{
    ViewData["Title"] = "Create User";
}

<h1>Crear Usuario</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Job"></label>
        <input asp-for="Job" class="form-control" />
        <span asp-validation-for="Job" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "User")'">Lista de usuarios</button>
</form>
<h1>@ViewData["Message"]</h1>